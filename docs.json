{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Support Agent Documentation",
  "colors": {
    "primary": "#006EB6",
    "light": "#006EB6",
    "dark": "#006EB6"
  },
  "favicon": "/assets/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Getting Started",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["getting-started/quickstart", "getting-started/overview"]
          }
        ]
      },
      {
        "tab": "Learn",
        "groups": [
          {
            "group": "Basics of Artificial Intelligence",
            "pages": [
              "learn/overview",
              "learn/what-is-rag",
              "learn/what-is-chunking",
              "learn/hallucination-editorial"
            ]
          },
          {
            "group": "Advanced Topics",
            "pages": [
              "learn/why-markdown",
              "learn/docs-as-code",
              "learn/ai-native-knowledge-bases-research"
            ]
          }
        ]
      },
      {
        "tab": "Technical",
        "groups": [
          {
            "group": "Technical Documentation",
            "pages": [
              "technical/chat-widget",
              "technical/infrastructure",
              "technical/retrieval-augmentation",
              "technical/specifications",
              "technical/release-notes/september-release"
            ]
          }
        ]
      },
      {
        "tab": "Resources",
        "groups": [
          {
            "group": "Resources",
            "pages": [
              "resources/about-byui",
              "resources/beta-disclosure",
              "resources/additional-resources"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/assets/logo.svg",
    "dark": "/assets/logo.svg",
    "href": "https://www.byui.edu"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "navbar": {
    "links": [
      {
        "label": "Homepage",
        "href": "https://www.byui.edu/"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Support Agent",
      "href": "https://supportagent.byui.edu"
    }
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "footer": {
    "socials": {
      "github": "https://github.com/BYUI-Information-Technology/"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
  }
}
