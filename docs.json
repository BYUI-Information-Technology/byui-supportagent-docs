{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Support Agent Documentation",
  "colors": {
    "primary": "#006EB6",
    "light": "#006EB6",
    "dark": "#006EB6"
  },
  "favicon": "/assets/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Home",
            "pages": [
              "index",
              "getting-started/chat-interface"
            ]
          }
        ]
      },
      {
        "tab": "Learn",
        "groups": [
          {
            "group": "AI Basics",
            "pages": [
              "learn/index",
              "learn/what-is-rag",
              "learn/what-is-chunking",
              "learn/hallucination-editorial"
            ]
          },
          {
            "group": "Documentation Best Practices",
            "pages": [
              "learn/why-markdown",
              "learn/docs-as-code",
              "learn/ai-native-knowledge-bases-research"
            ]
          }
        ]
      },
      {
        "tab": "Technical",
        "groups": [
          {
            "group": "Technical Documentation",
            "pages": [
              "technical/chat-widget",
              "technical/infrastructure",
              "technical/retrieval-augmentation",
              "technical/specifications",
              "technical/release-notes/september-release"
            ]
          }
        ]
      },
      {
        "tab": "Resources",
        "groups": [
          {
            "group": "Resources",
            "pages": [
              "resources/about-byui",
              "resources/beta-disclosure",
              "resources/additional-resources"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Privacy Policy",
          "href": "https://cesprivacy.org/ces-institutions-privacy-notice",
          "icon": "shield-halved"
        },
        {
          "anchor": "Legal",
          "href": "https://www.byui.edu/legal/",
          "icon": "legal"
        },
        {
          "anchor": "Contact Support",
          "href": "https://www.byui.edu/contact-us/",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/assets/logo.svg",
    "dark": "/assets/logo.svg"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/BYUI-Information-Technology/Support-Agent"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Support Agent",
      "href": "https://supportagent.byui.edu"
    }
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "footer": {
    "socials": {
      "github": "https://github.com/BYUI-Information-Technology/Support-Agent"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity"
    ]
  }
}