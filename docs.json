{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Support Agent Documentation",
  "description": "Official documentation for BYU-Idaho's AI-powered Support Agent. Includes user guides, AI and RAG fundamentals, technical specifications, and resources for the OpenAI GPT-powered student support platform.",
  "colors": {
    "primary": "#006EB6",
    "light": "#006EB6",
    "dark": "#006EB6"
  },
  "favicon": "/assets/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Getting Started",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["getting-started/quickstart", "getting-started/overview"]
          }
        ]
      },
      {
        "tab": "Learn",
        "groups": [
          {
            "group": "Basics of Artificial Intelligence",
            "pages": [
              "learn/basics/overview",
              "learn/basics/how-llms-are-trained",
              "learn/basics/what-is-model-alignment",
              "learn/basics/what-is-context-window"
            ]
          },
          {
            "group": "Advanced Topics",
            "pages": [
              "learn/advanced/docs-as-code",
              "learn/advanced/llm-weaknesses",
              "learn/advanced/ai-native-knowledge-bases-research"
            ]
          },
          {
            "group": "Retrieval Augmentation",
            "pages": [
              "learn/rag/what-is-rag",
              "learn/rag/what-is-chunking",
              "learn/rag/vector-databases"
            ]
          },
          {
            "group": "Tips & Tricks",
            "pages": ["learn/tips-tricks/why-markdown"]
          }
        ]
      },
      {
        "tab": "Technical",
        "groups": [
          {
            "group": "Technical Documentation",
            "pages": [
              "technical/chat-widget",
              "technical/infrastructure",
              "technical/retrieval-augmentation",
              "technical/specifications",
              "technical/release-notes/september-release"
            ]
          }
        ]
      },
      {
        "tab": "Resources",
        "groups": [
          {
            "group": "Resources",
            "pages": [
              "resources/about-byui",
              "resources/beta-disclosure",
              "resources/additional-resources"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/assets/lightmode_logo.png",
    "dark": "/assets/darkmode_logo.png",
    "href": "https://www.byui.edu"
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "navbar": {
    "links": [
      {
        "label": "Visit BYUI Home",
        "href": "https://www.byui.edu/"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Support Agent",
      "href": "https://supportagent.byui.edu"
    }
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "footer": {
    "socials": {
      "github": "https://github.com/BYUI-Information-Technology/"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      {
        "title": "Ask Claude",
        "description": "Ask Claude to explain this Support Agent Docs page",
        "href": {
          "base": "https://claude.ai/new",
          "query": [
            {
              "key": "q",
              "value": "You are analyzing documentation for BYU-Idaho's Support Agent, an AI-powered chatbot using RAG and OpenAI GPT-5.2 for student support.\n\nDocumentation page:\n\n$page\n\nHelp me understand this content, explain technical concepts clearly, and show how they apply to the Support Agent platform."
            }
          ]
        }
      },
      {
        "title": "Ask ChatGPT",
        "description": "Use ChatGPT to explain this Support Agent Docs page",
        "href": {
          "base": "https://chatgpt.com",
          "query": [
            {
              "key": "q",
